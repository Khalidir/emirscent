<div class="container py-3">
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <%= image_tag(@perfume.photo_url, width: '100%') %>
    </div>
    <div class="col-sm-12 col-md-6">
      <h1><%= @perfume.name %></h1>
      <h3><%= @perfume.description %></h3>
      <p>Amount: <%= humanized_money_with_symbol(@perfume.price) %></p>
      <%= form_tag orders_path do %>
        <%= hidden_field_tag 'perfume_id', @perfume.id %>
        <%= submit_tag 'Purchase', class: 'btn btn-secondaryx' %>
      <% end %>
      <br>
      <%= link_to "Back Perfumes", perfumes_path, class: "btn btn-outline-dark" %>
    </div>
  </div>
</div>
